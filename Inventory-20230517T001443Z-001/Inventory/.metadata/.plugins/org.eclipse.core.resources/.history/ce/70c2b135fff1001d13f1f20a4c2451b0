package IntentoryActivity;

import java.awt.event.ActionListener;

import javax.swing.*;
import java.awt.*;

public class Discount extends JFrame  {
	
	JRadioButton discount = new JRadioButton();
	JRadioButton Senior = new JRadioButton();
	JRadioButton RegularCustomer = new JRadioButton();
	JRadioButton Employee = new JRadioButton();
	ButtonGroup group = new ButtonGroup();
	JLabel dc = new JLabel();
	
Discount () {
	//JFrame settings
	this.setSize(400,250);
	//this.setUndecorated(true);
	this.setVisible(true);
	this.setTitle("DISCOUNT");
	this.setLocationRelativeTo(null);
	this.setDefaultCloseOperation(this.EXIT_ON_CLOSE);
	this.setResizable(false);
	this.setLayout(null);
	this.add(discount);
	this.add(Senior);
	this.add(RegularCustomer);
	this.add(Employee);
	this.add(dc);
	group.add(discount);
	group.add(Senior);
	group.add(RegularCustomer);
	group.add(Employee);
	
	
	
	dc.setBounds(25,10,200,50);
	dc.setText("SELECT DISCOUNT");
	dc.setFont(new Font("ARIAL", Font.BOLD, 20));
	
		}



}
